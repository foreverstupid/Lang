# BNF of LANG

<program> ::= { <statement> }

<statement> ::= <expression>; | <if_statement> | <goto_statement>; | <label>: <statement>

<tail> ::= <indexator><tail> | <args><tail> |

<indexator> ::= \[ <expression> \]

<args> ::= ( [ <expression> {, <expression> } ] )

<expression> ::= [ <unar> ] <operand>[<tail>] { <binar><expression> }

<operand> ::= ( <expression> ) | <literal> | <code_block>

<literal> ::= <string> | <int> | <float> | <variable>

<code_block> ::= \{ <program> \}

<goto_statement> ::= jump <label>

<if_statement> ::= if <expression> <statement> [ or <statement> ]

<unar> ::= - | ! | $

<binar> ::= + | - | * | / | % | > | < | ~ | & | \| | = | ?

<variable> ::= -//-

<int> ::= -//-

<float> ::= -//-

<string> ::= -//-

<label> ::= -//-